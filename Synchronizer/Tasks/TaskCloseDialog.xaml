<Window x:Class="Synchronizer.Tasks.TaskCloseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{DynamicResource OptionWindowStyle}"
        Title="Task Closing" Name="taskTitleWindow" Height="139" Width="300" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" Icon="/Synchronizer;component/Icons/info.ico" >
    <Grid>
        <Label Height="35" HorizontalAlignment="Center" Margin="8,0,8,0" VerticalAlignment="Top" FontSize="18" Content="Selected task will be closed" />
        <Button Content="OK" Height="35" Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Name="buttonOK" Width="85" FontSize="16" BorderBrush="#AAAAAA" Click="OK_Click" />
        <Button Content="CANCEL" Height="35" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Name="buttonCANCEL" Width="85" FontSize="16" BorderBrush="#AAAAAA" Click="CANCEL_Click" />
    </Grid>
    
</Window>
